{
  "name": "learning-plan-generator-combined",
  "version": "1.0.0",
  "description": "Unified Learning Plan Generator - Full-stack React + Express application with integrated frontend and backend code",
  "main": "src/server.js",
  "private": true,
  "proxy": "http://localhost:8080",
  "scripts": {
    "start": "npm run build && node src/server.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon src/server.js",
    "dev:client": "react-scripts start",
    "build": "react-scripts build",
    "build:prod": "npm run build && npm run start",
    "test": "react-scripts test",
    "test:server": "jest --testPathPattern=src/.*\\.test\\.js$",
    "test:all": "npm run test:server && npm run test",
    "test:coverage": "npm run test:server -- --coverage && npm run test -- --coverage --watchAll=false",
    "lint": "eslint src/ --ext .js,.jsx",
    "lint:fix": "eslint src/ --ext .js,.jsx --fix",
    "clean": "rimraf build node_modules/.cache",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.19",
    "@mui/lab": "^5.0.0-alpha.170",
    "@mui/material": "^5.14.20",
    "@mui/x-date-pickers": "^6.18.3",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^6.20.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-validator": "^7.0.1",
    "exceljs": "^4.4.0",
    "uuid": "^9.0.1",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "rimraf": "^5.0.5",
    "eslint": "^8.57.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/src/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/setupTests.js"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "learning-plan",
    "react",
    "express",
    "full-stack",
    "nodejs",
    "unified-codebase",
    "integrated",
    "single-repository"
  ],
  "author": "Learning Plan Generator",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "."
  },
  "homepage": "."
} 